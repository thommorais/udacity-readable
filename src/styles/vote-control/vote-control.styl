$vote-control
    .vote-control
        button,
        span
            height: 25px
            width: 30px
            text-align: center
            font-weight: lighter
            border: 1px solid $c-black
            border-radius: 2px

        button
            display: inline-block
            background: none
            line-height: 0.5em
            outline: none
            border: 0
        span
            font-size: 12px
            display: flex
            align-items: center
            justify-content: center

    .vote-control
        position: absolute
        left: 0
        top: 50%
        transform: translateY(-50%)
        button,
        span
            display: flex
            justify-content: center
            align-items: center