@require './buttons.styl'

$form
    form
        margin-top: 30px
        border-radius 2px
        position relative
        color var(--color-text)
        width: 90vw
        max-width: 700px

        &.new-post-form
            position: absolute
            z-index: 1
            left: 50%
            top: 15vh
            transform: translate(-50%, 5%)
            opacity: 0
            animation form-sshowing-up 0.2s 0.35s $enter forwards

        .field
            margin-bottom: 15px
            display: block
            width: 100%

        label
            display block
            font-size 0.85rem
            font-weight bold
            padding 0 0 0.5rem

    input, textarea
        border-radius 2px
        height 3rem
        padding 1rem
        width 100%
        border 2px solid $c-black
        font-weight bold
        color $c-black
        &:focus
            border-color $c-black
            outline none

    textarea
        min-height: 120px

    select
        width: 100%
        height: 50px
        border: none
        color $c-black
        font-weight: bold
        border 2px solid $c-black
        background: $c-white
        text-transform: capitalize

        option
            text-transform: capitalize

        &:focus
            outline: none

    button[type="submit"]
        margin-left: 0
        font-weight bold
        @extends $buttons
        border-color $c-pink
        background $c-pink
        &:hover:not([disabled])
            color $c-pink
        &:focus
            outline none

    button[disabled]
        opacity: 0.1
        cursor: forbiden

    .cancel-published,
    button[type="submit"]
        padding 1rem 2rem

    .cancel-published
        border none
        background transparent
        font-style italic
        font-weight 500


@keyframes form-sshowing-up
    100%
        opacity 1
        transform translate3d(-50%, 0, 0)